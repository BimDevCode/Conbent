@model IEnumerable<WebUi.Models.EntityImplementation.Article>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table article-item">
    <thead>
        <tr>
            <th class = "col-sm-2 ">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th class = "col-sm-2">
                @Html.DisplayNameFor(model => model.IntroTextPart)
                @Html.DisplayNameFor(model => model.IntroCodePart)
            </th>
            <th class = "col-sm-10">
                @Html.DisplayNameFor(model => model.BodyTextPart)
                @Html.DisplayNameFor(model => model.BodyCodePart)
            </th>
            <th class = "col-sm-2">
                @Html.DisplayNameFor(model => model.HttpRefs1)
                @Html.DisplayNameFor(model => model.HttpRefs2)
                @Html.DisplayNameFor(model => model.PicHttpRefs1)
                @Html.DisplayNameFor(model => model.PicHttpRefs2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UpdateDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserCreatedGuid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserUpdatedGuid)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
            <tr>
                <td class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Name)
                </td>
                <td class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.IntroTextPart)
                    @Html.DisplayNameFor(model => model.IntroCodePart)
                </td>
                <td class = "col-sm-10">
                    @Html.DisplayNameFor(model => model.BodyTextPart)
                    @Html.DisplayNameFor(model => model.BodyCodePart)
                </td>
                <td class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.HttpRefs1)
                    @Html.DisplayNameFor(model => model.HttpRefs2)
                    @Html.DisplayNameFor(model => model.PicHttpRefs1)
                    @Html.DisplayNameFor(model => model.PicHttpRefs2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedDateTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UpdateDateTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserCreatedGuid)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserUpdatedGuid)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
    }
    </tbody>
</table>
