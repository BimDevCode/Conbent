@model LoginViewModel

<div class="login-page style=" style="background-color: #1e1e1e; rounded-2">
    <div class="container">
        <div class="row top-buffer">

            @if (Model.EnableLocalLogin)
            {
                <div class="col"></div>
                <div class="col-sm-6">
                    <form asp-route="Login">
                        <input type="hidden" asp-for="ReturnUrl" />
                        <div class="login-container rounded-2 " style="background-color: #1e1e1e;">
                            <h2>Login</h2>
                            <partial name="_ValidationSummary" />
                            <div class="form-group">
                                <label asp-for="Username"></label>
                                <input class="form-control rounded-2 " style="background-color: #1e1e1e;" placeholder="Username" asp-for="Username" autofocus>
                            </div> 
                            <div class="form-group">
                                <label asp-for="Password"></label>
                                <input type="password" class="form-control rounded-2 " style="background-color: #1e1e1e;" placeholder="Password" asp-for="Password" autocomplete="off">
                            </div>
                            @if (Model.AllowRememberLogin)
                            {
                                <div class="form-group">
                                    <div class="form-check">
                                        <input class="form-check-input rounded-2 " style="background-color: #1e1e1e;" asp-for="RememberLogin">
                                        <label class="form-check-label rounded-2 " style="background-color: #1e1e1e;" asp-for="RememberLogin">
                                            Remember me
                                        </label>
                                    </div>
                                </div>
                            }
                            <div>
                                <p>The default users are alice/bob, password: Pass123$</p>
                            </div>
                            <button class="btn btn-primary rounded-2 " name="button" value="login">Sign In</button>
                            <div>
                                <p>Don't have an account?</p>
                            </div>
                            <button class="btn btn-primary rounded-2 " name="button" value="create">Sign Up</button>
                        </div>
                    </form>
                </div>
                <div class="col"></div>
            }
        </div>
    </div>
</div>